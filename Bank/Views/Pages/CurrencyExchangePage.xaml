<Page x:Class="Bank.Views.Pages.CurrencyExchangePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ctrl="clr-namespace:Bank.Core.CustomControls"
      mc:Ignorable="d" 
      d:DesignHeight="618" d:DesignWidth="950" 
      d:Background="{DynamicResource MainBackground}">

    <UniformGrid Columns="2" Rows="2">

        <ctrl:CurrencyExchangerControl Margin="40" FirstCurrency="₽" SecondCurrency="$"/>

        <ctrl:CurrencyExchangerControl Margin="40" FirstCurrency="$" SecondCurrency="₽"/>

        <ctrl:CurrencyExchangerControl Margin="40" FirstCurrency="₽" SecondCurrency="€"/>

        <ctrl:CurrencyExchangerControl Margin="40" FirstCurrency="€" SecondCurrency="₽"/>
        
    </UniformGrid>
</Page>
